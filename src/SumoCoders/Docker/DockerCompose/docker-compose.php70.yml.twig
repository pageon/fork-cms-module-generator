version: '2'
services:
  mysql:
    environment:
      MYSQL_ROOT_PASSWORD: root
    image: mysql:5.5
    ports:
      - 3306:3306
    restart: always
    volumes:
      - "~/Sites/sumocoders/docker/mysql55:/var/lib/mysql"

  web:
    # this requires the sumocoders-images to be installed
    #image: docker_fork-php56
    image: docker_fork-php70
    depends_on:
      - mysql
    environment:
      - FORK_ENV=prod
      - FORK_DEBUG=0
    links:
      - mysql
    ports:
      - "80:80"
    restart: always
    volumes:
      - ./:/var/www/html
